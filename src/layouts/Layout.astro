---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background">
    <slot />
  </body>
</html>

<style>
  body {
    background-image: url("/noise.webp"),
      linear-gradient(to top left, #beae97, transparent 10%),
      linear-gradient(to top right, #9e9180, transparent 12%),
      linear-gradient(to bottom right, #a1927d, transparent 7%),
      linear-gradient(to bottom left, #af9f89, transparent 9%);
    background-repeat: repeat, no-repeat; /* repeat for the noise texture, no-repeat for the gradient */
    background-size: auto, cover; /* auto for the noise texture to maintain its size, cover for the gradient */
    min-height: 100vh;
    box-shadow: inset 0 0 40px 10px rgba(0, 0, 0, 0.7);
  }
</style>
