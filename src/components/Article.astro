---
import Diamond from "../../public/diamond.svg";
interface Props {
  title: string;
  body: string;
  postedDate: string;
  href: string;
  author: string;
  source: string;
}

const { title, body, postedDate, href, author, source } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="mb-6 mx-8 min-w-0 block group"
>
  <article class="flex justify-between items-center relative">
    <!-- Left Image -->
    <div
      class="absolute left-[-1rem] md:-left-6 opacity-0 group-hover:opacity-100 transition-all duration-500 h-full flex flex-col justify-center items-center"
    >
      <div class="w-[1px] h-1/3 bg-gradient-to-t from-[#141414] to-transparent">
      </div>
      <img src={Diamond.src} class="w-3 my-2" />
      <div class="w-[1px] h-1/3 bg-gradient-to-b from-[#141414] to-transparent">
      </div>
    </div>

    <!-- Article Content -->
    <div class="flex-grow">
      <h3 class="text-lg font-semibold mb-2">{title}</h3>
      <p class="mb-2">{body}</p>
      <div class="flex flex-row justify-between">
        <p class="text-sm">{author ? `${author} -` : ""} {source}</p>
        <time datetime="2023-12-24" class="text-sm text-right"
          >{postedDate}</time
        >
      </div>
    </div>

    <!-- Right Image -->
    <div
      class="absolute right-[-1rem] md:-right-6 opacity-0 group-hover:opacity-100 transition-all duration-500 h-full flex flex-col justify-center items-center"
    >
      <div class="w-[1px] h-1/3 bg-gradient-to-t from-[#141414] to-transparent">
      </div>
      <img src={Diamond.src} class="w-3 my-2" />
      <div class="w-[1px] h-1/3 bg-gradient-to-b from-[#141414] to-transparent">
      </div>
    </div>
  </article>
</a>
